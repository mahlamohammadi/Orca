<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".costFragment">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boarder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="258dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"

        android:background="@drawable/back2"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/costmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/editwhite"
            android:drawableRight="@drawable/dolarr"
            android:drawablePadding="10dp"
            android:drawableTint="#7038D1"
            android:ems="10"
            android:fontFamily="@font/yekan"
            android:hint="مبلغ"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColorHint="#7038D1" />

        <EditText
            android:id="@+id/costcategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/editwhite"
            android:drawableRight="@drawable/category"
            android:drawablePadding="8dp"
            android:drawableTint="#7038D1"
            android:ems="10"
            android:fontFamily="@font/yekan"
            android:hint="دسته بندی"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#7038D1"
            android:textColorHint="#7038D1" />

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/editwhite"
            android:drawableRight="@drawable/description"
            android:drawablePadding="8dp"
            android:drawableTint="#7038D1"
            android:ems="10"
            android:fontFamily="@font/yekan"
            android:gravity="start|top"
            android:hint="توضیحات"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColorHint="#7038D1" />

        <Button
            android:id="@+id/btncost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/button"
            android:fontFamily="@font/yekan"
            android:padding="5dp"
            android:text="ثبت هزینه"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>