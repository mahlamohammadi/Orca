<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".incomeFragment" >

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boarder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="322dp"
        android:background="@drawable/frag"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/incomemount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/dolarr"
            android:ems="10"
            android:fontFamily="@font/yekan"
            android:hint="مبلغ"
            android:inputType="numberDecimal"
            android:textColorHint="#7038D1" />

        <EditText
            android:id="@+id/incomecategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/yekan"
            android:hint="دسته بندی"
            android:inputType="textPersonName"
            android:textColor="#7038D1"
            android:textColorHint="#7038D1" />

        <EditText
            android:id="@+id/incomedescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/yekan"
            android:gravity="start|top"
            android:hint="توضیحات"
            android:inputType="textMultiLine"
            android:textColorHint="#7038D1" />

        <Button
            android:id="@+id/btnincome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7038D1"
            android:fontFamily="@font/yekan"
            android:text=" ثبت درآمد"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>